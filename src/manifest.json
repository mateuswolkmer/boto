{
    "manifest_version": 2,
    "name": "boto",
    "version": "0.0.1",
    "description": "üê¨ Um adaptador de interfaces web",
    "author": "Mateus Wolkmer",
    "homepage_url": "https://github.com/mateuswolkmer/boto",
    "icons": {
        "16": "assets/icons/boto_16.png",
        "32": "assets/icons/boto_32.png",
        "64": "assets/icons/boto_64.png",
        "128": "assets/icons/boto_128.png"
    },
    "options_page": "ui/options.html",
    "background": {
        "scripts": [
            "scripts/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "assets/icons/boto_16.png",
        "default_popup": "ui/popup.html"
    },
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage"
    ]
}